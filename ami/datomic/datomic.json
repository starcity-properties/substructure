{
    "variables": {
        "datomic_version": "{{env `DATOMIC_VERSION`}}",
        "datomic_user": "{{env `DATOMIC_USER`}}",
        "datomic_password": "{{env `DATOMIC_PASSWORD`}}",
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-west-2",
        "source_ami": "ami-bd8f33c5",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "starcity/images/datomic-pro-{{user `datomic_version`}}-{{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "script": "scripts/install-datomic.sh",
        "environment_vars": [
            "DATOMIC_VERSION={{user `datomic_version`}}",
            "DATOMIC_USER={{user `datomic_user`}}",
            "DATOMIC_PASSWORD={{user `datomic_password`}}"
        ],
        "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }],
    "post-processors": ["vagrant"]
}
