{
    "variables": {
        "aws_profile": "{{env `AWS_PROFILE`}}",
        "source_ami": "",
        "ssh_username": "ubuntu",
        "service_name": "",
        "version": "",
        "artifact_name": "",
        "release_artifact": "",
        "releases_bucket": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `aws_profile`}}",
            "region": "us-west-2",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "c3.large",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "ws-{{user `service_name`}}-{{user `version`}}-{{timestamp}}",
            "associate_public_ip_address": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "set -x -e",
                "sleep 30",
                "sudo apt-get -y update",
                "sudo DEBIAN_FRONTEND=noninteractive apt-get upgrade -y",
                "aws s3 cp s3://{{user `releases_bucket`}}/{{user `release_artifact`}} /releases/{{user `artifact_name`}}"
            ]
        }
    ]
}
